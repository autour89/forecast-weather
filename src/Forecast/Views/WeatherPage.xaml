<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Forecast.Views.WeatherPage"
             Title="Weather">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Weather App" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry Placeholder="Enter city name" Text="{Binding SearchCity}" />
        <Button Text="Search" Command="{Binding SearchWeatherCommand}" />
        <Button Text="Current Location" Command="{Binding GetCurrentLocationWeatherCommand}" />
        <ActivityIndicator IsRunning="{Binding IsBusy}" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" />
        <Label Text="{Binding CityName}" FontSize="24" FontAttributes="Bold" />
        <Label Text="{Binding TemperatureDisplay}" FontSize="48" />
        <Label Text="{Binding Description}" FontSize="18" />
    </VerticalStackLayout>
</ContentPage>
